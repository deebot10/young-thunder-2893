<h1>Movie Show Page</h1>

<%= @movie.title%>
<%= @movie.genre%>
<%= @movie.creation_year%>

<% @movie.actors.actor_age.each do |actor|%>
  <p><%= actor.name%><p>
<%end%>

<p>Average Age:<%= @movie.actors.average_age%></p>

<%= form_with url: "/movies/#{@movie.id}", local: true, method: :post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit 'Submit'%>
<%end%>
